<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.wherever.cabral.fragment.PlaceInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço"
            android:textColor="#97979B"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Galeria Mercado Público, Porto Alegre"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="17dp"
            android:textColor="#363636"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_gravity="bottom"
            android:background="#F6F6F6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone"
            android:textColor="#97979B"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(51) 3289-4801"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="17dp"
            android:textColor="#363636"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_gravity="bottom"
            android:background="#F6F6F6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horários"
            android:textColor="#97979B"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seg - Sab (7:30 - 19:30)"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="17dp"
            android:textColor="#363636"/>


    </LinearLayout>

</LinearLayout>
